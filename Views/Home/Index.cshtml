@using Humanizer
@using PagedList.Core
@using PagedList
@using GameSite.Models
@model IEnumerable<Post>
@{
    var actionName = ViewContext.ActionDescriptor.AttributeRouteInfo;
    ViewData["Title"] = "IgroNewsUa";
}

<title>IgroNewsUa</title>

<div class="text-center">

    <partial name="_PostList" />

    @if (ViewBag.Page > 1)
    {
        <a class="btn btn-primary" asp-controller="Home" asp-action="Index" asp-route-page="@(ViewBag.Page - 1)">
            @Resources.Resource.Back</a>
    }

    @* @for (int i = 1; i <= ViewBag.TotalPages; i++)
    {
    <a class="btn btn-primary" asp-controller="Home" asp-action="Index" asp-route-page="@i">@i</a>
    } *@

    @if (ViewBag.Page < ViewBag.TotalPages)
    {
        <a class="btn btn-primary" asp-controller="Home" asp-action="Index" asp-route-page="@(ViewBag.Page + 1)">
            @Resources.Resource.Next</a>
    }

</div>
