@using Microsoft.AspNetCore.Identity
@using GameSite.Data
@using GameSite.Models
@using Humanizer
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@model IEnumerable<Post>

<div class="post-list">
    @foreach (Post post in ViewBag.Posts)
    {
        <div class="post">
            @if (!string.IsNullOrEmpty(post.TitleImage))
            {
                <a class="no-underline" asp-action="Show" asp-route-id="@post.Id">
                    <img src="@post.TitleImage" alt="TitleImage" />
                </a>
            }
            <div class="post-content">
                <a class="no-underline" asp-action="Show" asp-route-id="@post.Id">
                    <h3>@post.Title</h3>
                </a>
                <b style="color: @(MyVoids.GetColorCode(post.TypeId))">@post.TypeId</b>
                @if (post.Content.Length > 126)
                {<p>@((string)post.Content.Substring(0, 125))...</p>}
                else
                {<p>@post.Content</p>}
                
                <p>@post.Author</p>
                <p>
                    <i>Ð¢ÐµÐ³Ð¸:
                        @{
                            var tags = post.Tags.Split(",");
                            for (var i = 0; i < tags.Length; i++)
                            {
                                <a class="post-tags" asp-action="Tag" asp-route-tag="@tags[i].Trim()">@tags[i].Trim().Replace('_', ' ')</a>
                                @if (i < tags.Length - 1)
                                {
                                    @:<b>,</b>
                                }
                            }
                        }
                    </i>
                </p>

                <p title="@post.Date.ToString("yyyy-MM-dd HH:mm")">
                    @post.Date.ToString("dd MMMM, yyyy")
                    <span class="comment-icon">ðŸ’¬</span>
                    @(ViewBag.CommentsCount.ContainsKey(post.Id) ? ViewBag.CommentsCount[post.Id] : 0)
                </p>

                @if (SignInManager.IsSignedIn(User))
                {
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@post.Id">Ð ÐµÐ´Ð°Ð³ÑƒÐ²Ð°Ñ‚Ð¸</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@post.Id">Ð’Ð¸Ð´Ð°Ð»Ð¸Ñ‚Ð¸</a>
                }
            </div>
        </div>
    }
</div>
