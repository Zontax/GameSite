@using Microsoft.AspNetCore.Identity
@using System.Text.RegularExpressions
@using GameSite.Data
@using GameSite.Models
@using Humanizer
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@model IEnumerable<Post>

<div class="post-list">

    @foreach (Post post in ViewBag.Posts)
    {
        <div class="post">
            @if (!string.IsNullOrEmpty(post.TitleImage))
            {
                <a class="no-underline" asp-action="Show" asp-route-id="@post.Id">
                    <img src="@post.TitleImage" alt="TitleImage" />
                </a>
            }
            <div class="post-content">
                <a class="no-underline" asp-action="Show" asp-route-id="@post.Id">
                    <h3>@post.Title</h3>
                </a>
                <b style="color: @(MyVoids.GetColorCode(post.TypeId))">@post.TypeId</b>

                @if (post.Content.Length > 126)
                    { <p>@((string)Regex.Replace(post.Content, "<.*?>", "").Substring(0, 125))...</p> }
                else
                    { <p>@Regex.Replace(post.Content, "<.*?>", "")</p> }
                
                <p>@post.Author</p>
                <p>
                    <i>@Resources.Resource.Tags:
                        @{
                            var tags = post.Tags.Split(",");
                            for (var i = 0; i < tags.Length; i++)
                            {
                                <a class="post-tags" asp-action="Tag" asp-route-tag="@tags[i].Trim()">@tags[i].Trim().Replace('_', ' ')</a>
                                @if (i < tags.Length - 1)
                                {
                                    @:<b>,</b>
                                }
                            }
                        }
                    </i>
                </p>

                <p title="@post.Date.ToString("yyyy-MM-dd HH:mm")">
                    @post.Date.ToString("dd MMMM, yyyy")
                    <span class="comment-icon">ðŸ’¬</span>
                    @(ViewBag.CommentsCount.ContainsKey(post.Id) ? ViewBag.CommentsCount[post.Id] : 0)
                </p>

                @if (SignInManager.IsSignedIn(User))
                {
                    @if (User.IsInRole("Author"))
                    {
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@post.Id">@Resources.Resource.Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@post.Id">@Resources.Resource.Delete</a>
                    }        
                }
            </div>
        </div>
    }
</div>
