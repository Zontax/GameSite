@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@using GameSite.Models
@using GameSite.Data
@using Humanizer
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@model Comment;
@{
    ViewData["Title"] = ViewBag.Post.Title;
    var user = await UserManager.GetUserAsync(User);
}

<div>
    <div class="show-post">
        <center><h1>@ViewBag.Post.Title</h1></center>
        <p>@ViewBag.Post.Date.ToString("dd MMMM, yyyy") @Resources.Resource.Author: <b>@ViewBag.Post.Author</b></p>

        <div>
           @Html.Raw(ViewBag.Post.Content)
        </div>

        @if ((PostType)ViewBag.Post.TypeId == PostType.Огляд)
        {
            <div class="review-info">
                <div class="review-info__rating">
                    <div class="d-flex justify-content-center align-items-center">
                        <h1>@ViewBag.Post.ReviewRating</h1>
                    </div>
                    <div class="d-flex justify-content-center align-items-center">
                        <h2>@SiteFunctions.GetReviewText(ViewBag.Post.ReviewRating)</h2>
                    </div>
                </div>

                <div class="review-info__other">
                    <div class="review-plus">
                        <div class="review-title-plus"><h3>Вдалося</h3></div>
                        <ul class="ul-null">
                            @foreach (var item in ViewBag.Post.ReviewPlus.Split(','))
                            {
                                <li class="icon-dot-a">@item.Trim()</li>
                            }
                        </ul>
                    </div>

                    <div class="review-minus">
                        <div class="review-title-minus"><h3>Не вдалося</h3></div>
                        <ul class="ul-null">
                            @foreach (var item in ViewBag.Post.ReviewMinus.Split(','))
                            {
                                <li class="icon-dot-b">@item.Trim()</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
        
        <p>
            <button class="likeButton" data-userid="@user?.Id" data-postid="@ViewBag.Post.Id" title="Подобається">👍@ViewBag.Post.LikesCount</button>
            <button class="dislikeButton" data-userid="@user?.Id" data-postid="@ViewBag.Post.Id" title="Неподобається">👎@ViewBag.Post.DislikesCount</button>
            @if (!SignInManager.IsSignedIn(User))
            {
                <button class="favoriteButton" data-postid="@ViewBag.Post.Id" title="Додати до обраного">Зберегти</button>
            }
            
        </p>
        <p>
            <i>@Resources.Resource.Tags:
                @{
                    var tags = ViewBag.Post.Tags.Split(",");
                    for (var i = 0; i < tags.Length; i++)
                    {
                        <a class="post-tags" asp-action="Tag" asp-route-tag="@tags[i].Trim()">@tags[i].Trim().Replace('_', ' ')</a>
                        @if (i < tags.Length - 1)
                        {
                            @:<b>,</b>
                        }
                    }
                }
            </i>
        </p>
    </div>

    <h5>Коментарі</h5>
    @if (!SignInManager.IsSignedIn(User))
    {
        <p >
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">
                Увійдіть щоб залишати коментарі
            </a> 
        </p>
    }
    else
    {
        <form asp-action="Show" method="post" class="comment-form">

            <input type="hidden" value="@ViewBag.Post.Id" name="PostId" />
            <input type="hidden" value="@null" name="ReplyId" />
            <div class="form-group">
                <span asp-validation-for="Author" class="text-danger"></span>
                <input asp-for="Author" class="form-control" value="@user?.Name" readonly hidden>
            </div>
            <div class="form-group">
                <span asp-validation-for="Text" class="text-danger"></span>
                <textarea asp-for="Text" class="form-control"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Додати коментар</button>

        </form>
    }

    @foreach (Comment comment in ViewBag.Coments)
    {
        @if (comment.ReplyCommentId == null)
        {
            <div class="post-comment">
                <p><b>@comment.Author: </b> @comment.Text</p>
                <p class="date-time" title="@comment.Date.ToString("yyyy-MM-dd HH:mm")">
                    @(DateTime.UtcNow.Add(-((TimeSpan)(DateTime.UtcNow - comment.Date))).Humanize())
                    @if (comment.Edited) { <b> (@Resources.Resource.Edited)</b> }
                </p>
            </div>

            @* @if (SignInManager.IsSignedIn(User))
            {
                <form asp-action="Show" method="post" class="comment-form" id="commentReplyForm">

                    <input type="hidden" value="@ViewBag.Post.Id" name="PostId" />
                    <input type="hidden" value="@comment.Id" name="ReplyId" />
                    <div class="form-group">
                        <span asp-validation-for="Author" class="text-danger"></span>
                        <input asp-for="Author" class="form-control" value="@user?.Name" readonly hidden>
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="Text" class="text-danger"></span>
                        <textarea asp-for="Text" class="form-control"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Відповісти</button>

                </form>
            } *@

            <!-- Вкладений цикл для коментарів-відповідей -->
            @foreach (Comment reply in ((List<Comment>)ViewBag.Coments).Where(c => c.ReplyCommentId == comment.Id))
            {
                <div class="reply-comment">
                    <p><b>(reply to @comment.Author) @reply.Author: </b> @reply.Text</p>
                    <p class="date-time" title="@reply.Date.ToString("yyyy-MM-dd HH:mm")">
                        @(DateTime.UtcNow.Add(-((TimeSpan)(DateTime.UtcNow - reply.Date))).Humanize())
                        @if (reply.Edited) { <b> (@Resources.Resource.Edited)</b> }
                    </p>
                </div>
            }
        }
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () 
        {
            $('.likeButton').click(function () 
            {
                var button = $(this);
                var postId = $(this).data('postid');
                var userId = $(this).data('userid');
                var likesCountElement = button;
                var currentLikes = parseInt(likesCountElement.text().trim().substring(2));

                if (userId != "")
                {
                    $.ajax({
                        url: '/Ajax/Like',
                        type: 'Post',
                        data: { postId: postId, userId: userId },
                        success: function (response) 
                        {
                            if (response.success) 
                            {   
                                likesCountElement.text('👍' + (currentLikes + 1));
                                console.error("Ви поставили лайк");
                            } 
                            else 
                            {
                                likesCountElement.text('👍' + (currentLikes - 1));
                                console.error("Ви забрали лайк");
                            }
                        },
                        error: function (xhr, status, error) 
                        {
                            console.error(error);
                        }
                    });
                }
            });

            $(".favoriteButton").click(function() {
    var postId = $(this).data("postid");
    var isSaved = $(this).data("issaved");

    $.ajax({
            url: "/Ajax/AddToSaved",
            type: "POST",
            data: { postId: postId, isSaved: isSaved },
            success: function(response) {
                if (isSaved === "True") {
                    $(this).data("issaved", "False");
                    // Здійснюємо дії для видалення поста з обраних
                    // Наприклад, змінюємо іконку або колір кнопки
                    $(this).removeClass("selected");
                } else {
                    $(this).data("issaved", "True");
                    // Здійснюємо дії для додавання поста до обраних
                    // Наприклад, змінюємо іконку або колір кнопки
                    $(this).addClass("selected");
                    $('.toast').toast('show'); // Показуємо Toast при успішному додаванні
                }
            },
            error: function(xhr, status, error) {
                alert("Помилка при збереженні публікації: " + error);
            }
        });
    });

        });
    </script>
}