@using Microsoft.AspNetCore.Identity
@using GameSite.Models
@using GameSite.Data
@using Humanizer
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@model Comment;
@{
    ViewData["Title"] = @ViewBag.Post.Title;
}

<div class="text-center">
    <h1 class="display-4"></h1>

    <div class="show-post">
        <h4>@ViewBag.Post.Title</h4>
        <p>@Html.Raw(ViewBag.Post.Content)</p>

        @if ((PostType)ViewBag.Post.TypeId == PostType.Огляд)
        {
            <p>Плюси: @ViewBag.Post.ReviewPlus</p>
            <p>Мінуси: @ViewBag.Post.ReviewMinus </p>
            <p>ОЦІНКА: <b>@ViewBag.Post.ReviewRating</b></p>
        }

        <p>@ViewBag.Post.Date <b>@ViewBag.Post.Author</b></p>
        <p>
            <a title="Подобається">👍@(ViewBag.Post.LikesCount)</a>
            <a title="Неподобається">👎@(ViewBag.Post.DislikesCount)</a>
        </p>
        <p>
            <i>Теги:
                @{
                    var tags = ViewBag.Post.Tags.Split(",");
                    for (var i = 0; i < tags.Length; i++)
                    {
                        <a class="post-tags" asp-action="Tag" asp-route-tag="@tags[i].Trim()">@tags[i].Trim().Replace('_', ' ')</a>
                        @if (i < tags.Length - 1)
                        {
                            @:<b>,</b>
                        }
                    }
                }
            </i>
        </p>
    </div>

    <div class="">

    </div>

    <h5>Коментарі</h5>
    @if (!SignInManager.IsSignedIn(User))
    {
        <p>
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">
                Увійдіть щоб залишати коментарі
            </a> 
        </p>
    }
    else
    {
        <form asp-action="Show" method="post" class="comment-form">

            <input type="hidden" value="@ViewBag.Post.Id" name="PostId" />
            <input type="hidden" value="@null" name="ReplyId" />
            <div class="form-group">
                <span asp-validation-for="Author" class="text-danger"></span>
                <input asp-for="Author" class="form-control" value="@User.Identity?.Name" readonly hidden>
            </div>
            <div class="form-group">
                <span asp-validation-for="Text" class="text-danger"></span>
                <textarea asp-for="Text" class="form-control"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Додати коментар</button>

        </form>
    }

    @foreach (Comment comment in ViewBag.Coments)
    {
        @if (comment.ReplyCommentId == null)
        {
            <div class="post-comment">
                <p><b>@(comment.Author): </b> @comment.Text</p>
                <p class="date-time" title="@(comment.Date.ToString("yyyy-MM-dd HH:mm"))">
                    @(DateTime.UtcNow.Add(-((TimeSpan)(DateTime.UtcNow - comment.Date))).Humanize())
                    @if (comment.Edited)
                    {
                        <b> (змінено)</b>
                    }
                </p>
            </div>

            @if (SignInManager.IsSignedIn(User))
            {
                <form asp-action="Show" method="post" class="comment-form" id="commentReplyForm">

                    <input type="hidden" value="@ViewBag.Post.Id" name="PostId" />
                    <input type="hidden" value="@comment.Id" name="ReplyId" />
                    <div class="form-group">
                        <span asp-validation-for="Author" class="text-danger"></span>
                        <input asp-for="Author" class="form-control" value="@User.Identity?.Name" readonly hidden>
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="Text" class="text-danger"></span>
                        <textarea asp-for="Text" class="form-control"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Відповісти</button>

                </form>
            }

            <!-- Вкладений цикл для коментарів-відповідей -->
            @foreach (Comment reply in ((List<Comment>)ViewBag.Coments).Where(c => c.ReplyCommentId == comment.Id))
            {
                <div class="reply-comment">
                    <p><b>(reply to @(comment.Author)) @(reply.Author): </b> @reply.Text</p>
                    <p class="date-time" title="@(reply.Date.ToString("yyyy-MM-dd HH:mm"))">
                        @(DateTime.UtcNow.Add(-((TimeSpan)(DateTime.UtcNow - reply.Date))).Humanize())
                        @if (reply.Edited)
                        {
                            <b> (змінено)</b>
                        }
                    </p>
                </div>
            }
        }
    }
</div>



