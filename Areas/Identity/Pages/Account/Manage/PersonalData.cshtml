@page
@model PersonalDataModel
@{
    ViewData["Title"] = Resources.Resource.PersonalData;
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6">
        <p>@Resources.Resource.PersonalDataTitle1</p>
        <p>
            <strong>@Resources.Resource.PersonalDataTitle2</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post">
            <button class="btn btn-primary" type="submit">@Resources.Resource.DownloadYourPersonalData</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">@Resources.Resource.DeleteAccount</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
